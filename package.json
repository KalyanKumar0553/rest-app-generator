{
  "name": "angular-starter",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --output-hashing=all --aot --build-optimizer",
    "build:dev": "ng build",
    "build:stats": "ng build --configuration production --stats-json",
    "analyze": "ng build --configuration production --stats-json && echo 'Install webpack-bundle-analyzer globally: npm i -g webpack-bundle-analyzer' && echo 'Run: webpack-bundle-analyzer www/stats.json'",
    "postinstall": "ng version || true",
    "cap:init": "cap init",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "build:mobile": "ng build && cap sync"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@ionic/angular": "^8.7.5",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.5.0",
    "web-animations-js": "^2.3.2",
    "yargs": "^17.7.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.6",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "typescript": "^5.8.2",
    "zone.js": "^0.15.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
