package {{packageName}};

import java.util.List;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Info;
import io.swagger.v3.oas.models.Operation;
import io.swagger.v3.oas.models.PathItem;
import org.springdoc.core.models.GroupedOpenApi;

@Configuration
public class OpenApiConfig {

    @Bean
    public OpenAPI restAppOpenAPI() {
        return new OpenAPI()
                .info(new Info()
                        .title("{{appName}} API")
                        .version("v1")
                        .description("Auto-generated OpenAPI configuration"));
    }

{{#groups}}
    @Bean
    public GroupedOpenApi {{beanName}}() {
        return GroupedOpenApi.builder()
                .group("{{groupName}}")
                .pathsToMatch({{{pathsToMatchArgs}}})
{{#hasCustomizer}}
                .addOpenApiCustomizer(openApi -> {
{{{customizerBody}}}
                })
{{/hasCustomizer}}
                .build();
    }

{{/groups}}

    private void applyOperationMetadata(OpenAPI openApi, String path, String httpMethod, String description, List<String> tags, boolean deprecated) {
        Operation operation = resolveOperation(openApi, path, httpMethod);
        if (operation == null) {
            return;
        }
        if (description != null && !description.isBlank()) {
            operation.setDescription(description);
        }
        if (tags != null && !tags.isEmpty()) {
            operation.setTags(tags);
        }
        operation.setDeprecated(deprecated);
    }

    private void removeOperation(OpenAPI openApi, String path, String httpMethod) {
        if (openApi == null || openApi.getPaths() == null) {
            return;
        }
        PathItem pathItem = resolvePathItem(openApi, path);
        if (pathItem == null) {
            return;
        }
        switch (httpMethod) {
            case "GET" -> pathItem.setGet(null);
            case "POST" -> pathItem.setPost(null);
            case "PUT" -> pathItem.setPut(null);
            case "PATCH" -> pathItem.setPatch(null);
            case "DELETE" -> pathItem.setDelete(null);
            default -> {
            }
        }
    }

    private Operation resolveOperation(OpenAPI openApi, String path, String httpMethod) {
        if (openApi == null || openApi.getPaths() == null) {
            return null;
        }
        PathItem pathItem = resolvePathItem(openApi, path);
        if (pathItem == null) {
            return null;
        }
        return switch (httpMethod) {
            case "GET" -> pathItem.getGet();
            case "POST" -> pathItem.getPost();
            case "PUT" -> pathItem.getPut();
            case "PATCH" -> pathItem.getPatch();
            case "DELETE" -> pathItem.getDelete();
            default -> null;
        };
    }

    private PathItem resolvePathItem(OpenAPI openApi, String path) {
        if (openApi == null || openApi.getPaths() == null || path == null || path.isBlank()) {
            return null;
        }
        PathItem direct = openApi.getPaths().get(path);
        if (direct != null) {
            return direct;
        }
        for (String alternatePath : buildAlternatePaths(path)) {
            PathItem alternate = openApi.getPaths().get(alternatePath);
            if (alternate != null) {
                return alternate;
            }
        }
        return null;
    }

    private List<String> buildAlternatePaths(String path) {
        int marker = path.indexOf("/{");
        String suffix = marker >= 0 ? path.substring(marker) : "";
        String resourcePath = marker >= 0 ? path.substring(0, marker) : path;

        String trimmed = resourcePath.startsWith("/") ? resourcePath.substring(1) : resourcePath;
        String[] segments = trimmed.split("/");
        if (segments.length < 2) {
            return List.of();
        }

        String resource = segments[segments.length - 1];
        if (resource.isBlank()) {
            return List.of();
        }

        String alternateResource = resource.endsWith("s")
                ? resource.substring(0, resource.length() - 1)
                : resource + "s";
        if (alternateResource.isBlank() || alternateResource.equals(resource)) {
            return List.of();
        }

        segments[segments.length - 1] = alternateResource;
        String alternateBase = "/" + String.join("/", segments);
        return List.of(alternateBase + suffix);
    }
}
