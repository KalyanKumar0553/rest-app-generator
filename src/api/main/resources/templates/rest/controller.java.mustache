import {{modelPackage}}.{{entityName}};
import {{servicePackage}}.{{serviceClass}};
import {{supportPackage}}.{{querySupportClass}};

@RestController
@RequestMapping("/api/{{endpointPath}}")
public class {{controllerClass}} {

    private final {{serviceClass}} service;

    public {{controllerClass}}({{serviceClass}} service) {
        this.service = service;
    }

    @PostMapping
    public ResponseEntity<{{entityName}}> create(@Valid @RequestBody {{entityName}} request) {
        return ResponseEntity.status(HttpStatus.CREATED).body(service.create(request));
    }

    @PutMapping("/{id}")
    public ResponseEntity<{{entityName}}> update(@PathVariable("id") {{idType}} id,
            @Valid @RequestBody {{entityName}} request) {
        return ResponseEntity.ok(service.update(id, request));
    }

    @DeleteMapping("/{id}")
    public ResponseEntity<Void> deleteById(@PathVariable("id") {{idType}} id) {
        service.deleteById(id);
        return ResponseEntity.noContent().build();
    }

    @DeleteMapping
    public ResponseEntity<Void> deleteAll() {
        service.deleteAll();
        return ResponseEntity.noContent().build();
    }

    @GetMapping("/{id}")
    public ResponseEntity<{{entityName}}> getById(@PathVariable("id") {{idType}} id) {
        return ResponseEntity.ok(service.getById(id));
    }

    @GetMapping
    public ResponseEntity<Page<{{entityName}}>> getAllOrByQuery(@RequestParam Map<String, String> queryParams) {
        Pageable pageable = {{querySupportClass}}.resolvePageable(queryParams, {{{allowedSortFieldsLiteral}}});
        return ResponseEntity.ok(service.search(queryParams, pageable));
    }

    @ExceptionHandler(IllegalArgumentException.class)
    public ResponseEntity<Map<String, String>> handleIllegalArgument(IllegalArgumentException ex) {
        return ResponseEntity.badRequest().body(Map.of("error", ex.getMessage()));
    }
}
